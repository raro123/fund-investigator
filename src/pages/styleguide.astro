---
import Layout from '../layouts/Layout.astro';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';
import Badge from '../components/ui/Badge.astro';
import Section from '../components/ui/Section.astro';
import Hero from '../components/ui/Hero.astro';
---

<Layout
  title="Design System - Fund Investigator"
  description="Component library and design tokens for Fund Investigator"
>
  <!-- Hero -->
  <Hero size="md">
    <h1 class="text-display-md mb-4 text-navy">Design System</h1>
    <p class="text-body-lg text-gray-600 max-w-2xl mx-auto">
      Component library, design tokens, and usage guidelines for Fund Investigator
    </p>
  </Hero>

  <!-- Color Palette -->
  <Section background="white" spacing="lg">
    <h2 class="text-heading-xl text-navy mb-8">Color Palette</h2>

    <div class="space-y-12">
      <!-- Brand Colors -->
      <div>
        <h3 class="text-heading-md text-navy mb-4">Brand Colors</h3>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-6">
          <!-- Navy -->
          <div class="space-y-2">
            <div class="h-24 bg-navy-dark rounded-lg shadow-sm border border-gray-200"></div>
            <p class="text-sm font-mono text-gray-700">navy-dark</p>
            <p class="text-xs text-gray-500">#152a45</p>
          </div>
          <div class="space-y-2">
            <div class="h-24 bg-navy rounded-lg shadow-sm border border-gray-200"></div>
            <p class="text-sm font-mono text-gray-700">navy</p>
            <p class="text-xs text-gray-500">#1E3A5F</p>
          </div>
          <div class="space-y-2">
            <div class="h-24 bg-navy-light rounded-lg shadow-sm border border-gray-200"></div>
            <p class="text-sm font-mono text-gray-700">navy-light</p>
            <p class="text-xs text-gray-500">#2d5278</p>
          </div>

          <!-- Gold -->
          <div class="space-y-2">
            <div class="h-24 bg-gold-dark rounded-lg shadow-sm border border-gray-200"></div>
            <p class="text-sm font-mono text-gray-700">gold-dark</p>
            <p class="text-xs text-gray-500">#b8962e</p>
          </div>
          <div class="space-y-2">
            <div class="h-24 bg-gold rounded-lg shadow-sm border border-gray-200"></div>
            <p class="text-sm font-mono text-gray-700">gold</p>
            <p class="text-xs text-gray-500">#D4AF37</p>
          </div>
          <div class="space-y-2">
            <div class="h-24 bg-gold-light rounded-lg shadow-sm border border-gray-200"></div>
            <p class="text-sm font-mono text-gray-700">gold-light</p>
            <p class="text-xs text-gray-500">#e0c160</p>
          </div>

          <!-- Cream -->
          <div class="space-y-2">
            <div class="h-24 bg-cream border border-gray-300 rounded-lg shadow-sm"></div>
            <p class="text-sm font-mono text-gray-700">cream</p>
            <p class="text-xs text-gray-500">#fefce8</p>
          </div>
          <div class="space-y-2">
            <div class="h-24 bg-cream-dark border border-gray-300 rounded-lg shadow-sm"></div>
            <p class="text-sm font-mono text-gray-700">cream-dark</p>
            <p class="text-xs text-gray-500">#fef9c3</p>
          </div>

          <!-- Neutrals -->
          <div class="space-y-2">
            <div class="h-24 bg-white border border-gray-300 rounded-lg shadow-sm"></div>
            <p class="text-sm font-mono text-gray-700">white</p>
            <p class="text-xs text-gray-500">#FFFFFF</p>
          </div>
          <div class="space-y-2">
            <div class="h-24 bg-[#94A3B8] rounded-lg shadow-sm border border-gray-200"></div>
            <p class="text-sm font-mono text-gray-700">light-gray</p>
            <p class="text-xs text-gray-500">#94A3B8</p>
          </div>
          <div class="space-y-2">
            <div class="h-24 bg-[#64748B] rounded-lg shadow-sm border border-gray-200"></div>
            <p class="text-sm font-mono text-gray-700">gray (secondary)</p>
            <p class="text-xs text-gray-500">#64748B</p>
          </div>
        </div>
      </div>

      <!-- Semantic Colors -->
      <div>
        <h3 class="text-heading-md text-navy mb-4">Semantic Colors</h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <div class="space-y-2">
            <div class="h-24 bg-success rounded-lg shadow-sm"></div>
            <p class="text-sm font-mono text-gray-700">success</p>
            <p class="text-xs text-gray-500">#10b981</p>
          </div>
          <div class="space-y-2">
            <div class="h-24 bg-warning rounded-lg shadow-sm"></div>
            <p class="text-sm font-mono text-gray-700">warning</p>
            <p class="text-xs text-gray-500">#f59e0b</p>
          </div>
          <div class="space-y-2">
            <div class="h-24 bg-error rounded-lg shadow-sm"></div>
            <p class="text-sm font-mono text-gray-700">error</p>
            <p class="text-xs text-gray-500">#ef4444</p>
          </div>
          <div class="space-y-2">
            <div class="h-24 bg-info rounded-lg shadow-sm"></div>
            <p class="text-sm font-mono text-gray-700">info</p>
            <p class="text-xs text-gray-500">#3b82f6</p>
          </div>
        </div>
      </div>
    </div>
  </Section>

  <!-- Typography -->
  <Section background="cream" spacing="lg">
    <h2 class="text-heading-xl text-navy mb-8">Typography</h2>

    <div class="space-y-8 bg-white p-8 rounded-2xl">
      <div>
        <p class="text-sm text-gray-500 mb-2 font-mono">text-display-xl</p>
        <p class="text-display-xl text-navy">The quick brown fox</p>
      </div>
      <div>
        <p class="text-sm text-gray-500 mb-2 font-mono">text-display-lg</p>
        <p class="text-display-lg text-navy">The quick brown fox</p>
      </div>
      <div>
        <p class="text-sm text-gray-500 mb-2 font-mono">text-display-md</p>
        <p class="text-display-md text-navy">The quick brown fox</p>
      </div>
      <div>
        <p class="text-sm text-gray-500 mb-2 font-mono">text-heading-xl</p>
        <p class="text-heading-xl text-navy">The quick brown fox jumps</p>
      </div>
      <div>
        <p class="text-sm text-gray-500 mb-2 font-mono">text-heading-lg</p>
        <p class="text-heading-lg text-navy">The quick brown fox jumps over</p>
      </div>
      <div>
        <p class="text-sm text-gray-500 mb-2 font-mono">text-heading-md</p>
        <p class="text-heading-md text-navy">The quick brown fox jumps over the lazy</p>
      </div>
      <div>
        <p class="text-sm text-gray-500 mb-2 font-mono">text-heading-sm</p>
        <p class="text-heading-sm text-navy">The quick brown fox jumps over the lazy dog</p>
      </div>
      <div>
        <p class="text-sm text-gray-500 mb-2 font-mono">text-body-lg</p>
        <p class="text-body-lg text-gray-700">The quick brown fox jumps over the lazy dog. This is body large text used for introductory paragraphs and emphasis.</p>
      </div>
      <div>
        <p class="text-sm text-gray-500 mb-2 font-mono">text-body-md</p>
        <p class="text-body-md text-gray-700">The quick brown fox jumps over the lazy dog. This is body medium text used for standard paragraph content and general reading.</p>
      </div>
      <div>
        <p class="text-sm text-gray-500 mb-2 font-mono">text-body-sm</p>
        <p class="text-body-sm text-gray-600">The quick brown fox jumps over the lazy dog. This is body small text used for secondary content, captions, and metadata.</p>
      </div>
      <div>
        <p class="text-sm text-gray-500 mb-2 font-mono">text-caption</p>
        <p class="text-caption text-gray-500">THE QUICK BROWN FOX JUMPS OVER THE LAZY DOG</p>
      </div>
    </div>
  </Section>

  <!-- Buttons -->
  <Section background="white" spacing="lg">
    <h2 class="text-heading-xl text-navy mb-8">Buttons</h2>

    <div class="space-y-12">
      <!-- Variants -->
      <div>
        <h3 class="text-heading-md text-navy mb-6">Variants</h3>
        <div class="flex flex-wrap gap-4">
          <Button variant="primary">Primary Button</Button>
          <Button variant="secondary">Secondary Button</Button>
          <Button variant="tertiary">Tertiary Button</Button>
          <Button variant="outline">Outline Button</Button>
        </div>
      </div>

      <!-- Sizes -->
      <div>
        <h3 class="text-heading-md text-navy mb-6">Sizes</h3>
        <div class="flex flex-wrap items-center gap-4">
          <Button size="sm">Small</Button>
          <Button size="md">Medium</Button>
          <Button size="lg">Large</Button>
        </div>
      </div>

      <!-- With Icons -->
      <div>
        <h3 class="text-heading-md text-navy mb-6">With Icons</h3>
        <div class="flex flex-wrap gap-4">
          <Button icon="arrow-right">Launch Tool</Button>
          <Button variant="secondary" icon="external">View Report</Button>
          <Button variant="tertiary" icon="arrow-right">Read More</Button>
          <Button variant="outline" icon="download">Download</Button>
        </div>
      </div>

      <!-- States -->
      <div>
        <h3 class="text-heading-md text-navy mb-6">States</h3>
        <div class="flex flex-wrap gap-4">
          <Button>Normal</Button>
          <Button disabled>Disabled</Button>
        </div>
      </div>

      <!-- Full Width -->
      <div>
        <h3 class="text-heading-md text-navy mb-6">Full Width</h3>
        <Button fullWidth>Full Width Button</Button>
      </div>
    </div>
  </Section>

  <!-- Badges -->
  <Section background="cream" spacing="lg">
    <h2 class="text-heading-xl text-navy mb-8">Badges</h2>

    <div class="space-y-8">
      <!-- Variants -->
      <div>
        <h3 class="text-heading-md text-navy mb-4">Variants</h3>
        <div class="flex flex-wrap gap-3">
          <Badge>Default</Badge>
          <Badge variant="primary">Primary</Badge>
          <Badge variant="secondary">Secondary</Badge>
          <Badge variant="success">Success</Badge>
          <Badge variant="warning">Warning</Badge>
          <Badge variant="error">Error</Badge>
          <Badge variant="info">Info</Badge>
        </div>
      </div>

      <!-- Sizes -->
      <div>
        <h3 class="text-heading-md text-navy mb-4">Sizes</h3>
        <div class="flex flex-wrap items-center gap-3">
          <Badge size="sm">Small</Badge>
          <Badge size="md">Medium</Badge>
          <Badge size="lg">Large</Badge>
        </div>
      </div>

      <!-- Rounded -->
      <div>
        <h3 class="text-heading-md text-navy mb-4">Corner Styles</h3>
        <div class="flex flex-wrap gap-3">
          <Badge rounded={true}>Pill Shape</Badge>
          <Badge rounded={false}>Rounded Corners</Badge>
        </div>
      </div>
    </div>
  </Section>

  <!-- Cards -->
  <Section background="white" spacing="lg">
    <h2 class="text-heading-xl text-navy mb-8">Cards</h2>

    <div class="space-y-8">
      <div class="grid md:grid-cols-2 gap-6">
        <Card>
          <h3 class="text-heading-md text-navy mb-2">Default Card</h3>
          <p class="text-gray-600">Standard card with border and hover effect.</p>
        </Card>

        <Card variant="elevated">
          <h3 class="text-heading-md text-navy mb-2">Elevated Card</h3>
          <p class="text-gray-600">Card with permanent shadow and enhanced hover.</p>
        </Card>

        <Card variant="bordered">
          <h3 class="text-heading-md text-navy mb-2">Bordered Card</h3>
          <p class="text-gray-600">Prominent border with minimal shadow.</p>
        </Card>

        <Card variant="glass">
          <h3 class="text-heading-md text-navy mb-2">Glass Card</h3>
          <p class="text-gray-600">Semi-transparent with backdrop blur.</p>
        </Card>
      </div>

      <div>
        <h3 class="text-heading-md text-navy mb-4">Padding Variants</h3>
        <div class="grid md:grid-cols-2 gap-6">
          <Card padding="sm">
            <h4 class="text-heading-sm text-navy mb-1">Small Padding</h4>
            <p class="text-sm text-gray-600">Compact card content</p>
          </Card>
          <Card padding="lg">
            <h4 class="text-heading-sm text-navy mb-2">Large Padding</h4>
            <p class="text-gray-600">More spacious card content</p>
          </Card>
        </div>
      </div>

      <div>
        <h3 class="text-heading-md text-navy mb-4">Without Hover</h3>
        <Card hover={false}>
          <h4 class="text-heading-sm text-navy mb-2">Static Card</h4>
          <p class="text-gray-600">This card does not have hover effects</p>
        </Card>
      </div>
    </div>
  </Section>

  <!-- Spacing -->
  <Section background="cream" spacing="lg">
    <h2 class="text-heading-xl text-navy mb-8">Spacing Scale</h2>

    <div class="space-y-4 bg-white p-8 rounded-2xl">
      <div class="flex items-center gap-4">
        <div class="w-32 text-sm font-mono text-gray-700">tight-gap</div>
        <div class="h-4 bg-navy rounded" style="width: 0.5rem;"></div>
        <div class="text-sm text-gray-500">0.5rem / 8px</div>
      </div>
      <div class="flex items-center gap-4">
        <div class="w-32 text-sm font-mono text-gray-700">element-gap</div>
        <div class="h-4 bg-navy rounded" style="width: 1rem;"></div>
        <div class="text-sm text-gray-500">1rem / 16px</div>
      </div>
      <div class="flex items-center gap-4">
        <div class="w-32 text-sm font-mono text-gray-700">card-padding</div>
        <div class="h-4 bg-navy rounded" style="width: 1.5rem;"></div>
        <div class="text-sm text-gray-500">1.5rem / 24px</div>
      </div>
      <div class="flex items-center gap-4">
        <div class="w-32 text-sm font-mono text-gray-700">card-gap</div>
        <div class="h-4 bg-navy rounded" style="width: 2rem;"></div>
        <div class="text-sm text-gray-500">2rem / 32px</div>
      </div>
      <div class="flex items-center gap-4">
        <div class="w-32 text-sm font-mono text-gray-700">section-gap</div>
        <div class="h-4 bg-navy rounded" style="width: 4rem;"></div>
        <div class="text-sm text-gray-500">4rem / 64px</div>
      </div>
      <div class="flex items-center gap-4">
        <div class="w-32 text-sm font-mono text-gray-700">section-y-sm</div>
        <div class="h-4 bg-navy rounded" style="width: 5rem;"></div>
        <div class="text-sm text-gray-500">5rem / 80px</div>
      </div>
      <div class="flex items-center gap-4">
        <div class="w-32 text-sm font-mono text-gray-700">section-y</div>
        <div class="h-4 bg-navy rounded" style="width: 8rem;"></div>
        <div class="text-sm text-gray-500">8rem / 128px</div>
      </div>
    </div>
  </Section>

  <!-- Shadows -->
  <Section background="white" spacing="lg">
    <h2 class="text-heading-xl text-navy mb-8">Shadow System</h2>

    <div class="grid md:grid-cols-3 gap-6">
      <div class="p-6 bg-white shadow-xs rounded-xl border border-gray-100">
        <p class="text-sm font-mono text-gray-700 mb-2">shadow-xs</p>
        <p class="text-xs text-gray-500">Minimal shadow</p>
      </div>
      <div class="p-6 bg-white shadow-sm rounded-xl border border-gray-100">
        <p class="text-sm font-mono text-gray-700 mb-2">shadow-sm</p>
        <p class="text-xs text-gray-500">Subtle shadow</p>
      </div>
      <div class="p-6 bg-white shadow rounded-xl border border-gray-100">
        <p class="text-sm font-mono text-gray-700 mb-2">shadow</p>
        <p class="text-xs text-gray-500">Default shadow</p>
      </div>
      <div class="p-6 bg-white shadow-md rounded-xl border border-gray-100">
        <p class="text-sm font-mono text-gray-700 mb-2">shadow-md</p>
        <p class="text-xs text-gray-500">Medium shadow</p>
      </div>
      <div class="p-6 bg-white shadow-lg rounded-xl border border-gray-100">
        <p class="text-sm font-mono text-gray-700 mb-2">shadow-lg</p>
        <p class="text-xs text-gray-500">Large shadow</p>
      </div>
      <div class="p-6 bg-white shadow-xl rounded-xl border border-gray-100">
        <p class="text-sm font-mono text-gray-700 mb-2">shadow-xl</p>
        <p class="text-xs text-gray-500">Extra large shadow</p>
      </div>
      <div class="p-6 bg-white shadow-2xl rounded-xl border border-gray-100">
        <p class="text-sm font-mono text-gray-700 mb-2">shadow-2xl</p>
        <p class="text-xs text-gray-500">2XL shadow</p>
      </div>
      <div class="p-6 bg-white shadow-gold rounded-xl border border-gray-100">
        <p class="text-sm font-mono text-gray-700 mb-2">shadow-gold</p>
        <p class="text-xs text-gray-500">Brand gold shadow</p>
      </div>
      <div class="p-6 bg-white shadow-navy rounded-xl border border-gray-100">
        <p class="text-sm font-mono text-gray-700 mb-2">shadow-navy</p>
        <p class="text-xs text-gray-500">Brand navy shadow</p>
      </div>
    </div>
  </Section>

  <!-- Usage Guidelines -->
  <Section background="cream" spacing="lg">
    <h2 class="text-heading-xl text-navy mb-8 text-center">Usage Guidelines</h2>

    <div class="max-w-3xl mx-auto space-y-8">
      <Card>
        <h3 class="text-heading-md text-navy mb-4">Component Import</h3>
        <pre class="bg-gray-50 p-4 rounded-lg overflow-x-auto text-sm"><code>import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';
import Badge from '../components/ui/Badge.astro';
import Section from '../components/ui/Section.astro';
import Hero from '../components/ui/Hero.astro';</code></pre>
      </Card>

      <Card>
        <h3 class="text-heading-md text-navy mb-4">Color Usage</h3>
        <ul class="space-y-2 text-gray-700">
          <li><strong class="text-navy">Navy:</strong> Primary brand color, headers, main CTAs</li>
          <li><strong class="text-gold">Gold:</strong> Accent color, hover states, highlights</li>
          <li><strong class="text-cream-dark">Cream:</strong> Subtle backgrounds, badges</li>
          <li><strong class="text-success">Success:</strong> Positive feedback, confirmations</li>
          <li><strong class="text-warning">Warning:</strong> Cautionary messages</li>
          <li><strong class="text-error">Error:</strong> Error states, destructive actions</li>
          <li><strong class="text-info">Info:</strong> Informational messages</li>
        </ul>
      </Card>

      <Card>
        <h3 class="text-heading-md text-navy mb-4">Button Hierarchy</h3>
        <ul class="space-y-2 text-gray-700">
          <li><strong class="text-navy">Primary:</strong> Main action on a page (e.g., "Launch Tool")</li>
          <li><strong class="text-navy">Secondary:</strong> Important but not primary (e.g., "Learn More")</li>
          <li><strong class="text-navy">Tertiary:</strong> Low emphasis links (e.g., "View All")</li>
          <li><strong class="text-navy">Outline:</strong> Special emphasis with gold accent</li>
        </ul>
      </Card>
    </div>
  </Section>
</Layout>
