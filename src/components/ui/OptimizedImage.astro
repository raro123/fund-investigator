---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: ImageMetadata;
  alt: string;
  loading?: 'eager' | 'lazy';
  priority?: boolean;
  sizes?: string;
  class?: string;
  caption?: string;
  preset?: 'hero' | 'cover' | 'chart' | 'inline';
  width?: number;
  height?: number;
}

const {
  src,
  alt,
  loading = 'lazy',
  priority = false,
  caption,
  preset = 'chart',
  class: className,
  width,
  height,
  ...rest
} = Astro.props;

// Preset configurations for different image types
const presets = {
  hero: {
    widths: [640, 1024, 1400, 1920],
    sizes: '100vw',
    formats: ['avif', 'webp', 'png'] as const
  },
  cover: {
    widths: [400, 600, 800],
    sizes: '(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 400px',
    formats: ['avif', 'webp', 'jpg'] as const
  },
  chart: {
    widths: [600, 900, 1200],
    sizes: '(max-width: 768px) 100vw, min(65ch, 900px)',
    formats: ['avif', 'webp', 'png'] as const
  },
  inline: {
    widths: [400, 800],
    sizes: '(max-width: 768px) 100vw, 800px',
    formats: ['avif', 'webp'] as const
  }
};

const config = presets[preset];
const loadingAttr = priority ? 'eager' : loading;
const fetchpriorityAttr = priority ? 'high' : 'auto';
const decodingAttr = priority ? 'sync' : 'async';
---

{caption ? (
  <figure class={`my-8 ${className || ''}`}>
    <Image
      src={src}
      alt={alt}
      widths={config.widths}
      sizes={config.sizes}
      formats={config.formats}
      loading={loadingAttr}
      decoding={decodingAttr}
      fetchpriority={fetchpriorityAttr}
      class="rounded-2xl shadow-lg w-full h-auto"
      width={width}
      height={height}
      {...rest}
    />
    <figcaption class="text-sm text-gray-500 text-center mt-3 italic">
      {caption}
    </figcaption>
  </figure>
) : (
  <Image
    src={src}
    alt={alt}
    widths={config.widths}
    sizes={config.sizes}
    formats={config.formats}
    loading={loadingAttr}
    decoding={decodingAttr}
    fetchpriority={fetchpriorityAttr}
    class={`rounded-2xl shadow-lg w-full h-auto ${className || ''}`}
    width={width}
    height={height}
    {...rest}
  />
)}
