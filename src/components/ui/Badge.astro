---
/**
 * Badge Component
 *
 * A small label component for categories, tags, and status indicators.
 *
 * @example
 * <!-- Default cream badge -->
 * <Badge>Fund Analysis</Badge>
 *
 * <!-- Primary navy badge -->
 * <Badge variant="primary">Active</Badge>
 *
 * <!-- Success badge -->
 * <Badge variant="success" size="sm">Completed</Badge>
 */

interface Props {
  /** Badge color variant */
  variant?: 'default' | 'primary' | 'secondary' | 'success' | 'warning' | 'error' | 'info';
  /** Badge size */
  size?: 'sm' | 'md' | 'lg';
  /** Use rounded corners instead of pill shape */
  rounded?: boolean;
  /** Additional CSS classes */
  class?: string;
}

const {
  variant = 'default',
  size = 'md',
  rounded = true,
  class: className = '',
} = Astro.props;

// Variant styles
const variantStyles = {
  default: 'bg-cream text-navy',
  primary: 'bg-navy text-white',
  secondary: 'bg-gray-100 text-gray-700',
  success: 'bg-success-light/20 text-success-dark',
  warning: 'bg-warning-light/20 text-warning-dark',
  error: 'bg-error-light/20 text-error-dark',
  info: 'bg-info-light/20 text-info-dark',
};

// Size styles
const sizeStyles = {
  sm: 'px-2 py-0.5 text-xs',
  md: 'px-3 py-1 text-xs',
  lg: 'px-4 py-1.5 text-sm',
};

// Border radius
const roundedStyles = rounded ? 'rounded-full' : 'rounded';

// Base styles
const baseStyles = 'inline-block font-semibold';

// Combined classes
const classes = `${baseStyles} ${variantStyles[variant]} ${sizeStyles[size]} ${roundedStyles} ${className}`.trim();
---

<span class={classes}>
  <slot />
</span>
