---
import Logo from './Logo.astro';
import Button from './ui/Button.astro';
---

<header id="main-header" class="fixed top-0 left-0 right-0 bg-white/95 backdrop-blur-sm border-b border-gray-200 z-[10000] transition-colors duration-300">
  <div class="max-w-7xl mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="flex items-center" id="logo-link">
        <Logo width={160} />
      </a>

      <!-- Desktop Nav -->
      <nav class="hidden md:flex items-center gap-8">
        <a href="/reports" class="text-navy hover:text-gold transition-colors font-medium">Investigations</a>
        <a href="/about" class="text-navy hover:text-gold transition-colors font-medium">About</a>
        <Button href="/app" size="sm">Launch Deepdive</Button>
      </nav>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden text-navy focus:outline-none focus:ring-2 focus:ring-gold rounded p-2 transition-all duration-300"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <svg id="menu-icon" class="w-6 h-6 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
        <svg id="close-icon" class="w-6 h-6 hidden transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu Overlay -->
  <div
    id="mobile-menu"
    class="fixed top-[73px] left-0 right-0 bottom-0 bg-navy z-[9999] md:hidden transition-all duration-300 opacity-0 pointer-events-none"
    style="will-change: opacity;"
  >
    <nav class="flex flex-col items-center justify-center h-full gap-6 px-6">
      <a
        href="/reports"
        class="text-white hover:text-gold transition-colors font-medium text-2xl mobile-menu-link"
      >
        Investigations
      </a>
      <a
        href="/about"
        class="text-white hover:text-gold transition-colors font-medium text-2xl mobile-menu-link"
      >
        About
      </a>
      <div class="mobile-menu-link mt-4">
        <Button href="/app" size="lg">Launch Deepdive</Button>
      </div>
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');
  const menuLinks = document.querySelectorAll('.mobile-menu-link');
  const header = document.getElementById('main-header');
  const logoLink = document.getElementById('logo-link');

  let isOpen = false;

  function toggleMenu() {
    isOpen = !isOpen;

    if (isOpen) {
      // Open menu - change header to navy and show overlay
      mobileMenu?.classList.remove('opacity-0', 'pointer-events-none');
      mobileMenu?.classList.add('opacity-100');
      menuIcon?.classList.add('hidden');
      closeIcon?.classList.remove('hidden');
      menuButton?.setAttribute('aria-expanded', 'true');
      menuButton?.classList.remove('text-navy', 'hover:bg-gray-100');
      menuButton?.classList.add('text-white', 'hover:bg-white/10');
      header?.classList.remove('bg-white/95', 'border-gray-200');
      header?.classList.add('bg-navy', 'border-navy');
      logoLink?.classList.add('opacity-0', 'pointer-events-none');
      document.body.style.overflow = 'hidden';
    } else {
      // Close menu - restore white header and hide overlay
      mobileMenu?.classList.add('opacity-0', 'pointer-events-none');
      mobileMenu?.classList.remove('opacity-100');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
      menuButton?.setAttribute('aria-expanded', 'false');
      menuButton?.classList.add('text-navy', 'hover:bg-gray-100');
      menuButton?.classList.remove('text-white', 'hover:bg-white/10');
      header?.classList.add('bg-white/95', 'border-gray-200');
      header?.classList.remove('bg-navy', 'border-navy');
      logoLink?.classList.remove('opacity-0', 'pointer-events-none');
      document.body.style.overflow = '';
    }
  }

  menuButton?.addEventListener('click', toggleMenu);

  // Close menu when clicking on a link
  menuLinks.forEach(link => {
    link.addEventListener('click', () => {
      if (isOpen) toggleMenu();
    });
  });

  // Close menu on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && isOpen) {
      toggleMenu();
    }
  });
</script>
